{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-IC:/Program Files/SDL2/include",  // Path to SDL2 headers
                "-LC:/Program Files/SDL2/lib",      // Path to SDL2 libraries
                "-lSDL2",                           // Link against SDL2
                "${workspaceFolder}/src/*.cpp",
                "-o",
                "${workspaceFolder}/Mejo_Doom.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Generated task by user"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "${workspaceFolder}/Mejo_Doom.exe",
            "dependsOn": "build",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
